# DataForSEO API Credentials
# Sign up at https://dataforseo.com/ to get these credentials
DATAFORSEO_LOGIN=your_email@example.com
DATAFORSEO_PASSWORD=your_api_password

# OpenAI API Key (for legacy OpenAI-based scripts)
# Get your API key from https://platform.openai.com/account/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# Claude Configuration (for Claude-based scripts)
# Content generation approach: 'claude' for Claude Code integration, 'openai' for legacy
CONTENT_GENERATOR=claude
# Claude model preference for content quality vs speed
CLAUDE_MODEL_PREFERENCE=quality  # Options: quality, balanced, speed

# Content Configuration
TARGET_LOCATION=India
TARGET_LANGUAGE=en
SERP_OVERLAP_THRESHOLD=0.3
MIN_SEARCH_VOLUME=100
MAX_COMPETITION=0.3

# Output Configuration
KEYWORD_CLUSTERS_FILE=keyword_clusters.csv
CLUSTER_SUMMARY_FILE=cluster_summary.csv
ARTICLE_BRIEFS_FILE=article_briefs.json
ARTICLE_DRAFT_FILE=article_draft.json
SOCIAL_POSTS_FILE=social_posts.json
YOUTUBE_SCRIPT_FILE=youtube_script.json